<h2>Update the drone</h2>

<form action="/drones/{{myDrone._id}}/edit" method="post">

  <input
    type="text"
    name="name"
    placeholder="Name: "
    value="{{myDrone.name}}"
  />
  <input
    type="text"
    name="propellers"
    placeholder="propellers: "
    value="{{myDrone.propellers}}"
  />
  <input
    type="text"
    name="maxSpeed"
    placeholder="maxSpeed: "
    value="{{myDrone.maxSpeed}}"
  />

  <button>Create a drone</button>

</form>